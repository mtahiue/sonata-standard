version: '2'

services:
    app:
        logging: &app_logging
            driver: gelf
            options:
                gelf-address: udp://$LOGSTASH_ADDRESS:12201
                gelf-tag: symfony

    app_debug:
        logging: *app_logging

    web:
        logging: &web_logging
            driver: gelf
            options:
                gelf-address: udp://$LOGSTASH_ADDRESS:12201
                gelf-tag: nginx

    web_debug:
        logging: *web_logging
